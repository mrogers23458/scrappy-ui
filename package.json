{
  "name": "scrappy-ui",
  "version": "1.0.2",
  "description": "A simple, Tailwind-based React UI component library",
  "type": "module",
  "main": "dist/scrappy-ui.cjs.js",
  "module": "dist/scrappy-ui.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/scrappy-ui.esm.js",
      "require": "./dist/scrappy-ui.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mrogers23458/scrappy-ui"
  },
  "keywords": [
    "react",
    "ui-library",
    "tailwind",
    "storybook",
    "components"
  ],
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "publish": "npm run build && npm publish --access public"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@storybook/react": "^8.5.3",
    "@tailwindcss/vite": "^4.0.6",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "~5.7.2",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0"
  }
}
